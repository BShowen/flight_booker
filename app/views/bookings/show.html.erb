<h1>Booking details</h1>

<!-- render table with flight details -->
<%= render "shared/flight_details", flight_objs: [@booking.flight] %>

<table style="width:50%">
    <tr>
        <th>Passenger name</th>
        <th>Passenger email</th>
    </tr>
    <% @booking.passengers.each do |passenger| %>
        <tr>
            <td style="text-align:center"><%= passenger.name.capitalize %></td>
            <td style="text-align:center"><%= passenger.email %></td>
        </tr>
    <% end %>
</table>