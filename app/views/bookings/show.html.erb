<h1>Booking details</h1>
<table style="width:50%">
    <tr>
        <th>Departure date</th>
        <th>Departure from</th>
        <th>Flight time</th>
        <th>Landing in</th>
    </tr>
        <tr>
            <td style="text-align:center"><%= @booking.flight.departure_date.strftime("%B %d %Y") %></td>
            <td style="text-align:center"><%= @booking.flight.departure_airport.city + " - " + @booking.flight.departure_airport.code %></td>
            <td style="text-align:center"><%= @booking.flight.duration.to_s + " hours" %></td>
            <td style="text-align:center"><%= @booking.flight.arrival_airport.city + " - " + @booking.flight.arrival_airport.code %></td>
        </tr>
</table>
<table style="width:50%">
    <tr>
        <th>Passenger name</th>
        <th>Passenger email</th>
    </tr>
    <% @booking.passengers.each do |passenger| %>
        <tr>
            <td style="text-align:center"><%= passenger.name.capitalize %></td>
            <td style="text-align:center"><%= passenger.email %></td>
        </tr>
    <% end %>
</table>