<!-- # renders table for flight details. requires you to pass in an object pointing to an array containing flight obbjects -->
<table style="width:50%">
    <tr>
        <th>Departure date</th>
        <th>Departure from</th>
        <th>Flight time</th>
        <th>Landing in</th>
    </tr>
    <% flight_objs.each do |flight| %>
        <tr>
            <td style="text-align:center"><%= flight.departure_date.strftime("%B %d %Y") %></td>
            <td style="text-align:center"><%= flight.departure_airport.city + " - " + flight.departure_airport.code %></td>
            <td style="text-align:center"><%= flight.duration.to_s + " hours" %></td>
            <td style="text-align:center"><%= flight.arrival_airport.city + " - " + flight.arrival_airport.code %></td>
        </tr>
    <% end %>
</table>