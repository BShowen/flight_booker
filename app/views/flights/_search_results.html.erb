<%= form_tag new_booking_path, method: :GET do %>
    <table>
        <tr>
            <th width="5%">Flight</th>
            <th width="5%">From</th>
            <th width="5%">To</th>
            <th width="10%">Date</th>
            <th width="10%">Flight Duration</th>
            <th width="10%">Flight No.</th>
        </tr>
        <% @matching_flights.each do |f| %></td>
            <tr>
                <td style="text-align:center">
                    <%= label_tag "booking_flight_id_#{f.id}", "Select"%>
                    <%=radio_button_tag "booking[flight_id]", f.id %>
                </td>
                <td style="text-align:center"><%= f.departure_airport.code %></td>
                <td style="text-align:center"><%= f.arrival_airport.code %></td>
                <td style="text-align:center"><%= f.departure_date.strftime("%B %d %Y") %></td>
                <td style="text-align:center"><%= f.duration %> hours</td>
                <td style="text-align:center"><%= f.flight_number %></td>
            </tr>
        <% end %>
    </table>
    <%= label_tag "booking_passengers", "Number of tickets" %>
    <%= number_field_tag "booking[passengers]", nil, in: 1..3%>
    <%= submit_tag "Submit" %>
<% end %>